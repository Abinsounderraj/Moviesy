<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.Light" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:windowActivityTransitions">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorForeground</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="colorBackground">@color/background_light</item>
        <item name="colorForeground">@color/light_white</item>
        <item name="colorText">@color/black</item>
        <item name="colorTextLight">@color/light_black</item>
        <item name="colorSeparator">@color/separator_light</item>
        <item name="colorTextInverse">@color/inverse_light</item>
        <item name="colorNavSeparator">@color/separator_light</item>
    </style>

    <style name="AppTheme.Light.NoAction" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorForeground</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="colorBackground">@color/background_light</item>
        <item name="colorForeground">@color/light_white</item>
        <item name="colorText">@color/black</item>
        <item name="colorTextLight">@color/light_black</item>
        <item name="colorSeparator">@color/separator_light</item>
        <item name="colorTextInverse">@color/inverse_light</item>
        <item name="colorNavSeparator">@color/separator_light</item>
        <item name="castMiniControllerStyle">@style/CastMiniController.Light</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.MaterialComponents">
        <item name="android:windowActivityTransitions">true</item>
        <item name="colorAccent">@color/colorAccent_Dark</item>
        <item name="colorBackground">#121212</item>
        <item name="colorForeground">#1E1E1E</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="colorText">@color/white</item>
        <item name="colorTextInverse">@color/inverse_dark</item>
        <item name="colorTextLight">@color/light_white</item>
        <item name="colorSeparator">@color/separator_dark</item>
        <item name="colorNavSeparator">@color/separator_dark</item>
    </style>

    <style name="AppTheme.Dark.NoAction" parent="Theme.MaterialComponents.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="colorAccent">@color/colorAccent_Dark</item>
        <item name="colorBackground">#121212</item>
        <item name="colorForeground">#1E1E1E</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="colorText">@color/white</item>
        <item name="colorTextInverse">@color/inverse_dark</item>
        <item name="colorTextLight">@color/light_white</item>
        <item name="colorSeparator">@color/separator_dark</item>
        <item name="colorNavSeparator">@color/separator_dark</item>
        <item name="castMiniControllerStyle">@style/CastMiniController.Dark</item>
    </style>

    <style name="AppTheme.Dark.Main" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimaryDark">@color/foreground</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="colorAccent">@color/colorAccent_Dark</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="android:navigationBarColor">?attr/colorForeground</item>
        <item name="colorBackground">#121212</item>
        <item name="colorForeground">#1E1E1E</item>
        <item name="colorText">@color/white</item>
        <item name="colorTextInverse">@color/inverse_dark</item>
        <item name="colorTextLight">@color/light_white</item>
        <item name="colorSeparator">@color/separator_dark</item>
        <item name="colorNavSeparator">@color/separator_dark</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>

    <style name="AppTheme.Light.Main" parent="AppTheme.Light.NoAction">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorNavSeparator">@color/separator_light</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
    </style>

    <style name="DialogTheme.Dark" parent="@style/CommonDialogTheme">
        <item name="colorBackground">#121212</item>
        <item name="colorForeground">#1E1E1E</item>
        <item name="colorText">@color/white</item>
        <item name="colorTextLight">@color/light_white</item>
        <item name="colorTextInverse">@color/inverse_dark</item>
        <item name="colorSeparator">@color/separator_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogTheme.Light" parent="@style/CommonDialogTheme">
        <item name="colorBackground">@color/background_light</item>
        <item name="colorForeground">@color/light_white</item>
        <item name="colorText">@color/black</item>
        <item name="colorTextLight">@color/light_black</item>
        <item name="colorTextInverse">@color/inverse_light</item>
        <item name="colorSeparator">@color/separator_light</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CommonDialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppDialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>

    <style name="TorrentPlayerTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="customChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">?attr/colorTextInverse</item>
        <item name="android:textColor">?attr/colorForeground</item>
        <item name="android:checkable">true</item>
        <item name="chipStartPadding">10dp</item>
        <item name="chipEndPadding">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.Dark.Main">
        <item name="android:windowBackground">#9B68DA</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Transparent" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
        <item name="submitBackground">@android:color/transparent</item>
    </style>

    <style name="BottomViewActive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="BottomViewInActive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppBottomSheetStyle" parent="BottomSheetDialogTheme">
        <item name="colorForeground">?colorSeparator</item>
        <item name="sheetBackgroundColor">?colorForeground</item>
        <item name="materialButtonStyle">@style/BottomSheetButtonStyle</item>
    </style>

    <style name="BottomSheetButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?colorTextInverse</item>
        <item name="android:backgroundTint">?colorPrimarySurface</item>
    </style>

    <style name="DialogFragmentStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">97%</item>
        <item name="android:windowMinWidthMinor">97%</item>
    </style>

</resources>

        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="CastMiniController.Light" parent="CastMiniController">
        <item name="castBackground">@color/light_white</item>
        <item name="castProgressBarColor">@color/colorAccent</item>
